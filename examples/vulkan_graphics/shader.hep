// This example is using the bufferDeviceAddress extension, so it does not quite look like "normal" vulkan

@(push_constant)
constants: #import(Push_Constants)

@(vertex_shader, link_name = "main")
vertex_main :: proc(/* Nothing here! */) -> (
	v_position:   [2]f32,
	v_tex_coords: [2]f32,
) {
	vertex_index := $VertexIndex
	v_position    = constants.vertex_buffer[vertex_index].position
	v_tex_coords  = constants.vertex_buffer[vertex_index].tex_coords
	$Position     = { v_position, 0, 1, }
}

@(fragment_shader, link_name = "main")
fragment_main :: proc(
	v_position:   [2]f32,
	v_tex_coords: [2]f32,
) -> (f_color: [4]f32) {
	f_color = { v_tex_coords, 1, 1, }
	return
}
