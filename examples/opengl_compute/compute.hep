Binding  :: #import(Binding_Point)
Location :: #import(Uniform_Location)

@(binding = Binding.Input_Image)
input:  image[2][4]f32
@(binding = Binding.Output_Image)
output: image[2][4]f32

@(uniform, binding = Binding.Uniform_Buffer)
uniforms: #import(Compute_Uniforms)

@(uniform, location = Location.Tint)
u_tint: [4]f32

@(compute_shader)
main :: proc() {
	coord        := $GlobalInvocationId.xy
	output[coord] = u_tint * uniforms.tint * input[(coord * 2) % uniforms.image_size]
}
