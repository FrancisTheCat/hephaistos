@(binding = 0)
input:  image[2][4]f32
@(binding = 1)
output: image[2][4]f32

@(push_constant)
constants: #import(Compute_Constants)

@(compute_shader, local_size = {8, 8, 1})
main :: proc() {
	coord        := $GlobalInvocationId.xy
	output[coord] = constants.tint * input[(coord * 2) % constants.image_size]
}
