@(uniform, binding = 0)
input:  image[2][4]f32
@(uniform, binding = 1)
output: image[2][4]f32

@(push_constant)
constants: #import(Compute_Constants)

@(compute_shader)
main :: proc() {
	coord        := $GlobalInvocationId.xy
	output[coord] = 0.25 * constants.tint * (
		input[(coord * 2) % constants.image_size + {0, 0}] +
		input[(coord * 2) % constants.image_size + {0, 1}] +
		input[(coord * 2) % constants.image_size + {1, 0}] +
		input[(coord * 2) % constants.image_size + {1, 1}] \
	)
}
